root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.java]
indent_size = 4
continuation_indent_size = 2

[*.scala]
indent_size = 2
continuation_indent_size = 2

[*.gradle]
index_size = 4
